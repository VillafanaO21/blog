  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav
      div.container
        h3 Blogzilla
          ul.nav.justify-content-end.main-nav
            li.nav-item
              a.nav-link(href='/') View Articles
            if user
              liv.nav-item
                a.nav-link(href='#') Hello #{user.first_name}
              liv.nav-item
                a.nav-link(href="/logout") Logout
            else
              liv.nav-item
                a.nav-link(href="/login") Login
              liv.nav-item
                a.nav-link(href="/register") Register
    div.container
        block content
